<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:hint="Masukan Nama"/>
        <EditText
            android:id="@+id/pesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Pesan"/>

        <Button
            android:id="@+id/send"
            android:text="Kirim Pesan"
            android:layout_marginVertical="18dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

        <Button
            android:id="@+id/hint"
            android:text="Dapatkan Saran"
            android:layout_marginVertical="18dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <Button
            android:id="@+id/clear"
            android:text="Bersihkan Pesan"
            android:layout_marginVertical="18dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

        <Button
            android:id="@+id/suggest1"
            android:text="Saran Jawaban 1"
            android:layout_marginVertical="9dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

        <Button
            android:id="@+id/suggest2"
            android:text="Saran Jawaban 2"
            android:layout_marginVertical="9dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>

        <Button
            android:id="@+id/suggest3"
            android:text="Saran Jawaban 1"
            android:layout_marginVertical="9dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>